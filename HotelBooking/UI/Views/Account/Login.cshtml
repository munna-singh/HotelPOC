@using (Html.BeginForm("Login", "Account"))
{
    <table width="100%" align="center">
        <tr>
            <td>
                <div class="container">
                    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title">Sign In</div>
                            </div>

                            <div style="padding-top:30px" class="panel-body">

                                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                                <form id="loginform" class="form-horizontal" role="form">

                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username" style="margin:0px;">
                                    </div>

                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password" style="margin:0px;">
                                    </div>

                                    <div class="input-group float-right">
                                        <div class="col-sm-12 controls">
                                            <button type="submit" class="btn btn btn-success" style="width:150px;height:50px;">Login</button>
                                        </div>
                                    </div>

                                    <div class="input-group">
                                        <div class="col-sm-12 controls">
                                            <p style="color:red; font-size:12px;">@ViewBag.Error</p>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </td>
        </tr>

    </table>
}